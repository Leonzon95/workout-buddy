<div class="form__padding">
    <div class="container">
        <div class="row">   

            <div class="col-md-6">    
                <h3>Add <%= @workout.name %> to your calendar </h3>

                <%= render partial: 'partials/errors', locals: {obj: @scheduled_workout} %>

                <%= render partial: 'form', locals: {scheduled_workout: @scheduled_workout, workout: @workout} %>

                <%= render partial: 'calendar', locals: {scheduled_workouts: @scheduled_workouts} %>
            </div>

            <div class="col-md-6">
                <div class="img__down">
                    <%= image_tag 'date_picker.svg' %> 
                </div>
            </div>

        </div>
    </div>
</div>