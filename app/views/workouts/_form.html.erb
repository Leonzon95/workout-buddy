
<%= form_for(workout, html: {class: "form-horizontal"}) do |f| %>

    <div class="form-group">
        <%= f.label :name, 'Name:', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %><br>
        </div>
    </div>

    <div class="form-group">
        <%= f.label :category, 'Select Categories', class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <div class="checkbox__categories">
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
        </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
                <%= f.check_box :is_private %>
            <%= f.label :is_private, 'Private' %>
        </div>
        </div>
    </div>

    <div class="col-sm-offset-2 col-sm-10">
        <h4>Exercises</h2>
    </div>

    <%= f.fields_for :exercises  do |builder| %>
        <%= render partial: 'exercise_fields', locals: {s: builder} %>
    <% end %>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class:"btn btn-primary" %>
        </div>
    </div>
<% end %>
